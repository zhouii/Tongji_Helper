{
  "manifest_version": 2,

  "name": "Tongji Helper",
  "description": "能自动登录同济的各种网站，还有邮箱登录、选课辅助、评教辅助等功能(⊙v⊙)~",
  "version": "1.11.1",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html",
    "default_title": "惊艳的自动登录和选课辅助功能~"
  },
  
  "icons": {
  	"48": "img/icon48.png",
   	"128": "img/icon.png"
  },
  
  "content_scripts": [
    {
      "matches": ["*://*.tongji.edu.cn/*","http://192.168.192.10/*","http://192.168.192.17/*","http://192.168.192.18/*","*://xui.ptlogin2.qq.com/*","*://dl.reg.163.com/*","*://passport.126.com/*","*://passport.alibaba.com/*","*://202.120.163.129/*"],
      "js": ["js/jquery-3.1.1.min.js", "js/myjs.js","js/tj.js"],
      "all_frames": true,
      "match_about_blank": true, 
      "run_at": "document_idle"
    }
  ],
  
  "background": {
    "scripts": ["js/jquery-3.1.1.min.js", "js/myjs.js", "js/background.js"]
  },
  
  "options_page": "options.html",
  
  "homepage_url": "https://www.zhouii.com/tj-helper",
  
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "contextMenus",
    "<all_urls>",
    "cookies",
    "notifications"
  ],

  "web_accessible_resources": [
    "css/bootstrap.min.css",
    "css/mystyle.css",
    "js/bootstrap.min.js",
    "fonts/*"
  ]
}